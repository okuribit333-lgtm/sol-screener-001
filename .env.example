# ── 必須 ──
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxxxx/xxxxx

# ── 任意: API キー ──
HELIUS_API_KEY=
GITHUB_TOKEN=

# ── 機能トグル ──
ENABLE_PUMPFUN=true
ENABLE_NFT=false
ENABLE_MANIA_SCORING=true
ENABLE_SMART_MONEY=true

# ── 監視間隔 ──
REALTIME_INTERVAL_MINUTES=5
SCAN_INTERVAL_MINUTES=60
DAILY_REPORT_HOUR=9

# ── ウォレット監視（カンマ区切り、addr:label 形式） ──
WATCH_WALLETS=

# ── 流動性監視トークン（カンマ区切り） ──
WATCH_TOKENS=

# ── SOL 価格レンジ ──
SOL_RANGE_LOW=0
SOL_RANGE_HIGH=0

# ── NFT 監視（カンマ区切り） ──
WATCH_NFTS=

# ── スクリーニング設定 ──
TOP_N=5
MIN_LIQUIDITY_USD=1000
MIN_VOLUME_24H_USD=500

# ── 安全性 ──
DANGER_AUTO_EXCLUDE=true

# ── ログ ──
LOG_LEVEL=INFO
ENABLE_FILE_LOG=false
